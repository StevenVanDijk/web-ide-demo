{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Export PNG from PUML",
            "type": "shell",
            "command": "./plantumlRedirect.cmd",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "${fileBasenameNoExtension}"
            ],
            "presentation": {
                "reveal": "never",
            },
            "dependsOn": [
                "Generate PUML"
            ]
        },
        {
            "label": "Generate PUML",
            "command": "${command:cml.generate.puml.proxy}",
            "group": "build",
            "presentation": {
                "reveal": "never",
            },
       }
    ]
}